{
  "manifest_version": 3,
  "name": "Tab Organizer",
  "version": "1.0",
  "description": "A simple tab organizer extension",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_page": "settings.html",
  "permissions": [
  "tabs",
  "storage",
  "activeTab",
  "cookies"
],

  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "popup.html",
    "default_title": "Tab Organizer"
  },
  "web_accessible_resources": [
  {
    "resources": ["categories.json"],
    "matches": ["https://*/*", "http://*/*"]
  }

]
}
